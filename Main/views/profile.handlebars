<div>
    <header>
        <h2>Welcome back, {{name}}</h2>
    </header>

    <div class="col-md-6">
        <h3>Create a New Project:</h3>

        <form>
            <div>
                <label for="blog-title">Blog Title:</label>
                <input type="text" id="blog-title" name="blog-title"/>
            </div>
            <div>
                <label for="blog-post">Blog Post:</label>
                <input type="text" id="blog-post" name="blog-post"/>
            </div>
            <div>
                <button type="submit">Create Blog Post</button>
            </div>
        </form>
    </div>

    {{#if blog.length}}
    <div>
        <h3>Current Blog Posts:</h3>
        {{#each blogs as |blog|}}
        <div>
            <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
        </div>
        <div>
            <button data-id="{{blog.id}}">DELETE</button>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

